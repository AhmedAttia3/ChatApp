<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity"
    android:background="@drawable/profile_activity">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/userImage"
        android:src="@drawable/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_border="false"
        app:civ_shadow_color="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"/>

    <TextView
        android:id="@+id/userName"
        android:layout_below="@+id/userImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="ahmed attia"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/userStatus"
        android:layout_below="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:text="hey , i am here"/>

    <Button
        android:id="@+id/sedMessage"
        android:layout_below="@+id/userStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:background="@drawable/buttons"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/cancelMessage"
        android:layout_below="@+id/sedMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Chat Request"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:background="@drawable/buttons"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
</RelativeLayout>